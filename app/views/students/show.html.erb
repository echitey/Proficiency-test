<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h4 class="text-center">INFORMAÇÕES DO ESTUDANTE</h4><br/>
    <strong>Estudante Id: </strong><%= @student.id%><br/>
    <strong>Nome: </strong><%= @student.name%><br/>
    <strong>Numero de Registro: </strong><%= @student.register_number%><br/>
    <strong>Status: </strong>
      <% if @student.status == 1 %>
        <%= 'Matriculado' %>
      <% else %>
        <%= 'Não Matriculado' %>
      <% end %><br/>
    <strong>Criado em: </strong><%= @student.created_at%>

    <br/><br/><br/>

    <div class="row">
      <div class="col-md-4 col-md-offset-2">
         <%= link_to 'Alterar', edit_student_path(@student), class: "btn btn-default btn-block" %>
      </div>
      <div class="col-md-4">
        <%= link_to 'Excluir', student_path, class: "btn btn-danger btn-block",
                                  method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
  </div>
</div>
