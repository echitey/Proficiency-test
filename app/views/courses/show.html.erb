<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h4 class="text-center">INFORMAÇÕES DO CURSO</h4><br/>
    <strong>Curso Id: </strong><%= @course.id%><br/>
    <strong>Nome: </strong><%= @course.name%><br/>
    <strong>Descrição: </strong><%= @course.description%><br/>
    <strong>Status: </strong>
      <% if @course.status == 1 %>
        <%= 'Ativo' %>
      <% else %>
        <%= 'Não Ativo' %>
      <% end %><br/>
    <strong>Criado em: </strong><%= @course.created_at%>

    <br/><br/><br/>

    <div class="row">
      <div class="col-md-4 col-md-offset-2">
         <%= link_to 'Alterar', edit_course_path(@course), class: "btn btn-default btn-block" %>
      </div>
      <div class="col-md-4">
        <%= link_to 'Excluir', course_path, class: "btn btn-danger btn-block",
                                  method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
  </div>
</div>
